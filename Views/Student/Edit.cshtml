@model Buoi5.Models.Student

@{
    ViewData["Title"] = "Edit";
}

<h1>Sửa thông tin sinh viên</h1>

<h4>Sinh viên</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StudentId" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">Tên</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Họ</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GradeId" class="control-label">lớp</label>
                <select asp-for="GradeId" class="form-control" asp-items="ViewBag.GradeId"></select>
                <span asp-validation-for="GradeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-success btn-sm mt-3" />
                <a asp-action="Index" class="btn btn-secondary btn-sm mt-3">
                    <i class="bi bi-arrow-left-circle me-1"></i> Về danh sách
                </a>
            </div>
        </form>
    </div>
</div>