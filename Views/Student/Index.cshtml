@model IEnumerable<Buoi5.Models.Student>

@{
    ViewData["Title"] = "Danh sách sinh viên";
}

<h1>Danh sách sinh viên</h1>

<p>
    <a asp-action="Create" class="btn btn-success btn-lg">
        <i class="bi bi-plus-circle me-1"></i> Thêm mới sinh viên
    </a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>MSSV</th>
            <th>Họ</th>
            <th>Tên</th>
            <th>Lớp</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-row">
                <td>
                    @Html.DisplayFor(modelItem => item.StudentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Grade.GradeName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.StudentId" class="btn btn-outline-primary btn-sm me-1">
                        <i class="bi bi-pencil-square me-1"></i> Sửa
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.StudentId" class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-trash me-1"></i> Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>