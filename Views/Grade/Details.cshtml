@model Buoi5.Models.Grade

@{
    ViewData["Title"] = "Details";
}

<h1>Chi tiết</h1>

<div>
    <h4>Lớp</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Lên lớp
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GradeName)
        </dd>
    </dl>
</div>

<h4>Sinh viên</h4>
@if (Model.Students != null && Model.Students.Any())
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Mã số sinh viên</th>
                <th>Họ</th>
                <th>Tên</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.Students)
            {
                <tr class="table-row">
                    <td>@student.StudentId</td>
                    <td>@student.LastName</td>
                    <td>@student.FirstName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>Không có học sinh nào</div>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model?.GradeId" class="btn btn-outline-primary btn-sm mt-3">
        <i class="bi bi-pencil-square me-1"></i> Sửa tên lớp
    </a>
    <a asp-action="Index" class="btn btn-secondary btn-sm mt-3">
        <i class="bi bi-arrow-left-circle me-1"></i> Về danh sách
    </a>
</div>