@model Buoi5.Models.Grade

@{
    ViewData["Title"] = "Edit";
}

<h1>Sửa tên lớp</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="GradeId" />
    <div class="form-group">
        @* <label asp-for="GradeName" class="control-label"></label> *@
        <input asp-for="GradeName" placeholder="Nhập tên lớp" class="form-control" />
        <span asp-validation-for="GradeName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success btn-sm mt-3">
        <i class="bi bi-save me-1"></i> Lưu
    </button>
    <a asp-action="Index" class="btn btn-secondary btn-sm mt-3">
        <i class="bi bi-arrow-left-circle me-1"></i> Về danh sách
    </a>
</form>