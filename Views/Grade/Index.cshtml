@model IEnumerable<Buoi5.Models.Grade>

@{
    ViewData["Title"] = "Danh sách lớp";
}

<h1>Danh sách lớp</h1>

<p>
    <a asp-action="Create" class="btn btn-success btn-lg">
        <i class="bi bi-plus-circle me-1"></i> Tạo mới
    </a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Tên lớp
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-row">
                <td>
                    @Html.DisplayFor(modelItem => item.GradeName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.GradeId" class="btn btn-outline-primary btn-sm me-1">
                        <i class="bi bi-pencil-square me-1"></i> Sửa
                    </a>
                    <a asp-action="Details" asp-route-id="@item.GradeId" class="btn btn-outline-info btn-sm me-1">
                        <i class="bi bi-info-circle me-1"></i> Chi tiết
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.GradeId" class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-trash me-1"></i> Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>