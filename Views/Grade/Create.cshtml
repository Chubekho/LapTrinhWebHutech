@model Buoi5.Models.Grade

@{
    ViewData["Title"] = "Create";
}

<h1>Thêm lớp mới</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        @* <label asp-for="GradeName" class="control-label"></label> *@
        <input asp-for="GradeName" placeholder="Nhập tên lớp" class="form-control" />
        <span asp-validation-for="GradeName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success btn-sm mt-3">
        <i class="bi bi-plus-circle me-1"></i> Tạo mới
    </button>
    <a asp-action="Index" class="btn btn-secondary btn-sm  mt-3">
        <i class="bi bi-arrow-left-circle me-1"></i> Về danh sách
    </a>
</form>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}