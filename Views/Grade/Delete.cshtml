@model Buoi5.Models.Grade

@{
    ViewData["Title"] = "Delete";
}

<h3 class="mt-3">Bạn có muốn xóa lớp @Html.DisplayFor(model => model.GradeName) ?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên lớp
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GradeName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="GradeId" />
        <input type="submit" value="Xóa" class="btn btn-danger btn-sm " />
        <a asp-action="Index" class="btn btn-secondary btn-sm">
            <i class="bi bi-arrow-left-circle me-1"></i> Về danh sách
        </a>
    </form>
</div>